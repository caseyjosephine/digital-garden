---
import "../styles/global.css"; // Add this here instead
const { title = "Digital Garden" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Boldonse&family=Spectral:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav class="site-nav">
      <ul class="site-nav__list">
        <li><a href="/" class="site-nav__link" aria-current={Astro.url.pathname === '/' ? 'page' : undefined}>Home</a></li>
        <li><a href="/reviews" class="site-nav__link" aria-current={Astro.url.pathname.startsWith('/reviews') ? 'page' : undefined}>Reviews</a></li>
      </ul>
    </nav>    
    <slot />
  </body>
</html>
